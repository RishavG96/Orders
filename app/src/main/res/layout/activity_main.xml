<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:fab="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/drawer_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#CECECE"
android:descendantFocusability="blocksDescendants"
tools:openDrawer="start">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:srcCompat="@drawable/empty" />
        <TextView
            android:id="@+id/textView43"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:textSize="14dp"
            android:text="List of orders is empty"
            android:fontFamily="sans-serif"
            android:textColor="#323643"
            android:layout_below="@+id/imageView3"
            android:visibility="gone"
            android:gravity="center"/>
        <ListView
            android:id="@+id/listview2"
            android:layout_marginTop="57dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             />
            <Button
                android:id="@+id/button3"
                android:layout_width="279dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="235dp"
                android:background="#EA4335"
                android:fontFamily="sans-serif"
                android:text="+Create New Order"
                android:textColor="#FFFFFF"
                android:textSize="14dp" />

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/material_design_android_floating_action_menu"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            fab:menu_animationDelayPerItem="55"
            fab:menu_backgroundColor="@android:color/transparent"
            fab:menu_colorNormal="#da3c2f"
            fab:menu_colorPressed="#dc4b3f"
            fab:menu_colorRipple="#99d4d4d4"
            fab:menu_fab_size="normal"
            fab:menu_icon="@drawable/menu"
            fab:menu_labels_colorNormal="#ffffff"
            fab:menu_labels_colorPressed="#444"
            fab:menu_labels_colorRipple="#66efecec"


            fab:menu_labels_ellipsize="none"
            fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
            fab:menu_labels_position="left"
            fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
            fab:menu_labels_textColor="#000000"
            fab:menu_labels_textSize="15sp"
            fab:menu_openDirection="up">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/material_design_floating_action_menu_item1"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:src="@drawable/send"
                fab:fab_label="Send all orders"
                fab:fab_size="mini" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/material_design_floating_action_menu_item2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/delete"
                fab:fab_label="Delete all orders"
                fab:fab_size="mini" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/material_design_floating_action_menu_item3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/delete"
                fab:fab_label="Delete sent orders"
                fab:fab_size="mini" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/material_design_floating_action_menu_item4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/delete"
                fab:fab_label="Delete unsent orders"
                fab:fab_size="mini" />
        </com.github.clans.fab.FloatingActionMenu>
    </RelativeLayout>

<include
    layout="@layout/app_bar_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

<android.support.design.widget.NavigationView
    android:id="@+id/nav_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:headerLayout="@layout/nav_header_main"
    app:menu="@menu/activity_main_drawer" >

</android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
