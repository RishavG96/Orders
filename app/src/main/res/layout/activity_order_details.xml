<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/drawer_layout10"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#CECECE"
tools:openDrawer="start">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".OrderDetailsActivity">

        <TextView
            android:id="@+id/textView31"
            android:layout_marginTop="77dp"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:scrollbars="vertical"
            android:layout_marginLeft="13dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="16dp"
            android:textColor="#323643"
            android:text=""/>
        <TextView
            android:id="@+id/textView38"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:scrollbars="vertical"
            android:layout_marginLeft="14dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="14dp"
            android:textColor="#323643"
            android:text="Items"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="149dp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:srcCompat="@drawable/img_412721324" />
        <TextView
            android:id="@+id/textView35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center"/>


        <ListView
            android:id="@+id/listview7"
            android:layout_width="match_parent"
            android:layout_height="335dp"
            android:layout_marginTop="23dp"></ListView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView39"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:gravity="end"
                android:textSize="14dp"
                android:text="Total price: "
                android:fontFamily="sans-serif"
                android:textColor="#323643"/>
            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginRight="10dp"
                android:gravity="end"
                android:textStyle="bold"
                android:textSize="15dp"
                android:fontFamily="sans-serif"
                android:textColor="#323643"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal">
            <Button
                android:id="@+id/editorder"
                android:layout_width="170dp"
                android:layout_height="48dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:background="@drawable/editbutton"
                android:textColor="#EA4335"
                android:text="Edit Order"/>
            <Button
                android:id="@+id/submitorder"
                android:layout_width="170dp"
                android:layout_height="48dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:background="@drawable/button"
                android:textColor="#FFFFFF"
                android:text="Submit Order"/>
            <Button
                android:id="@+id/additem"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif"
                android:background="@drawable/button"
                android:visibility="gone"
                android:textColor="#FFFFFF"
                android:text="+Add Item"/>
        </LinearLayout>


    </LinearLayout>

<include
    layout="@layout/app_bar_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

<android.support.design.widget.NavigationView
    android:id="@+id/nav_view10"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:headerLayout="@layout/nav_header_main"
    app:menu="@menu/activity_main_drawer" >

</android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
